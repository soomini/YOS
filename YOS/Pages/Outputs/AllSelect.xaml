<UserControl x:Class="YOS.Pages.Outputs.AllSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid Loaded="Grid_Loaded" Margin="10,10,0,-10">
        <ScrollViewer Margin="-10,-10,10,10">
            <Grid MinWidth="200">
                <TextBlock Text="All Select" Style="{StaticResource Heading2}" Margin="10,0,-10,0" />
                <DataGrid x:Name="dataGrid" Height="183" SelectionChanged="dataGrid_SelectionChanged" Margin="0,92,0,25">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="SelRowDelete" Header="선택한 행 삭제" Click="SelRowDelete_Click"/>
                            <MenuItem x:Name="SelRowUpdate" Header="선택한 행 업데이트" Click="SelRowUpdate_Click" />
                            <MenuItem x:Name="SelRowNew" Header="새로운 데이터 추가" Click="SelRowNew_Click" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
